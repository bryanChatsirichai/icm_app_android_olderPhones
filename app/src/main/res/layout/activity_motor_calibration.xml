<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <include layout="@layout/motor_header_layout" />
            <TextView
                android:id="@+id/motor_calibration_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="180dp"
                android:text="|- Calibration -|" />

            <Button
                android:id="@+id/motor_calibration_zoom_cali_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/motor_calibration_header"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="Zoom Calibration" />

            <Button
                android:id="@+id/motor_calibration_focus_cali_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/motor_calibration_zoom_cali_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="Focus Calibration" />

            <Button
                android:id="@+id/motor_calibration_pov_cali_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/motor_calibration_focus_cali_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:text="POV Calibration" />

</RelativeLayout>
