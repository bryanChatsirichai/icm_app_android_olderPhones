<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/rotation_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:text="|- Rotations -|" />

    <Button
        android:id="@+id/rotation_rear_motor_0_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rotation_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Rear motor" />

    <Button
        android:id="@+id/rotation_front_motor_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rotation_rear_motor_0_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Front motor" />
</RelativeLayout>
