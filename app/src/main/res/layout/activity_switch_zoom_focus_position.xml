<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/zoom_focus_position_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:text="|- Positioning Setting -|" />

    <Button
        android:id="@+id/position_zoom_at_the_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/zoom_focus_position_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Zoom at the Back" />

    <Button
        android:id="@+id/position_zoom_at_the_front_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/position_zoom_at_the_back_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Zoom at the Front" />
</RelativeLayout>
